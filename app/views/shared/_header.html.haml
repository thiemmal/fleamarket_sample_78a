%header.Top
  .Top__innerTop
    .Top__innerTop__main
      %h1.Logo
        = link_to "/" do
          = image_tag src="logo.png"
      .Top__innerTop__main__seach
        %form.Top__innerTop__main__seach__box{action:"#", acceptcharset:"UTF-8", method:"get"}
          %input{name:"utf8", type:"hidden" ,value:"✓"}
          %input.Form__inputText{"placeholder": "キーワードから探す", "type": "text"}
          %button.Top__innerTop__main__seach__box__botan{type:"submit"}
            .Top__innerTop__main__seach__box__botan__icon
              = image_tag src="http://furima.tokyo/assets/icon-search-60a83ada85216fe00789cd16065281694d9a08948275fef83683fadcf131d84d.svg" , class: "Contents"
          %input{type:"hidden" , name:"authenticity_token" ,value:"z9MMmqcTltZ6rohkw4uyJvd7IBqIFXhoPJYuLz8YPYc9GLAwsDw0cGPiGKUI04onzh/EkA5mnongEZ4YunihSA=="}
      %ul.result
    .Mokuji
      %ul.Mokuji__themeLeft
        %li.Mokuji__themeLeft__item.Mokuji__themeLeft__item--one
          = link_to categories_path, id: 'categoBtn' do
            カテゴリー
          #tree_menu
            %ul.categoryTree
              - @parents.each do |parent|
                %li.category_parent
                  = link_to category_path(parent) do
                    %input{type: "button", value: "#{parent.name}", name: "#{parent.id}", class: "parent_btn"}
              %li.category_parent
                = link_to categories_path do
                  %input{type: "button", value: "全てのカテゴリー", id: "all_btn"}
            %ul.categoryTree-child
            %ul.categoryTree-grandchild

        %li.Mokuji__themeLeft__item
          = link_to "#" , id:"brandBtn"do
            ブランド
      
      %ul.Mokuji__themeRight
        - if user_signed_in?
          %li.Mokuji__themeRight__item.Mokuji__themeRight__item--log
            = link_to "ログアウト", destroy_user_session_path, method: :delete
          %li.Mokuji__themeRight__item.Mokuji__themeRight__item--new
            = link_to user_path(current_user) do
              = current_user.nickname
        - else
          %li.Mokuji__themeRight__item.Mokuji__themeRight__item--log
            = link_to new_user_session_path do
              ログイン
          %li.Mokuji__themeRight__item.Mokuji__themeRight__item--new
            = link_to new_user_registration_path do
              新規会員登録