.Listing
  = link_to root_path do
    .Logo
      = image_tag 'logo.png',class: 'Logo__image'
  = form_with model: @product do |f|
    .Product
      .Product__image
        %p.Product__image__title 
          出品画像 
          %span
            必須
        %p.Product__image__detail 最大4枚までアップロードできます
        %p.Product__image__submit クリックしてファイルをアップロード

      .Product__name
        %p.Product__name__title 
          商品名
          %span
            必須
        = f.text_field :name, class: 'Product__name__text', placeholder: '40文字まで'

      .Product__explanation
        %p.Product__explanation__title 
          商品の説明
          %span
            必須
        = f.text_area :details, class: 'Product__explanation__text', placeholder: '商品の説明（必須 1000文字以内）'
        //文字数カウントはJSで行います。
  
      .Product__detail
        .Product__detail__title 商品の詳細
        .Product__detail__category
          %p.Product__detail__category__title
            カテゴリー 
            %span
              必須
          .Product__detail__category__select
            = select_tag '', options_for_select(["選択してください", "レディース", "メンズ"]), {class: 'Product__detail__category__select__form'}
          
        .Product__detail__brand
          %p.Product__detail__brand__title
            ブランド
            %span
              任意
          = f.text_field :category, class: 'Product__detail__brand__text', placeholder: '例）シャネル'
        
        .Product__detail__status
          %p.Product__detail__status__title
            商品の状態
            %span
              必須
          .Product__detail__status__select
            = select_tag '', options_for_select(["選択してください", "新品、未使用", "未使用に近い", "目立った傷や汚れなし", "やや傷や汚れあり", "傷や汚れあり", "全体的に状態が悪い"]), {class: 'Product__detail__status__select__form'}
      
      .Product__delivery
        .Product__delivery__title 商品の配送
        .Product__delivery__burden 
          %p.Product__delivery__burden__title
            配送料の負担
            %span
              必須
          .Product__delivery__burden__select
            = select_tag '', options_for_select(["選択してください", "送料込み(出品者負担)", "着払い(購入者負担)"]), {class: 'Product__delivery__burden__select__form'}

        .Product__delivery__method
          %p.Product__delivery__method__title
            配送の方法
            %span
              必須
          .Product__delivery__method__select
            = select_tag '', options_for_select(["選択してください", "未定", "クロネコヤマト", "ゆうパック", "ゆうメール"]), {class: 'Product__delivery__method__select__form'}

        .Product__delivery__region
          %p.Product__delivery__region__title
            発送元の地域
            %span
              必須
          .Product__delivery__region__select
            = select_tag '', options_for_select(["選択してください", "北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県", "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県", "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県"]), {class: 'Product__delivery__region__select__form'}
      
        .Product__delivery__day
          %p.Product__delivery__day__title
            発送までの日数
            %span
              必須
          .Product__delivery__method__select
            = select_tag '', options_for_select(["選択してください", "1〜2日で発送", "２〜3日で発送", "4〜7日で発送"]), {class: 'Product__delivery__method__select__form'}

      .Product__price
        .Product__price__title 価格 (¥300 ~ 9,999,999)
        .Product__price__sale
          %p.Product__price__sale__title
            販売価格
            %span
              必須
          %span{class: "Product__price__sale__symbol"}
            ¥
          = f.text_field :category, class: 'Product__price__sale__form', placeholder: '0'
        .Product__price__fee
          .Product__price__fee__title 販売手数料 (10%)
          //JSで実装する
        .Product__price__profit
          .Product__price__profit__title 販売利益
          //JSで実装する
      
      .Product__btn
        = f.submit '出品する', class: 'Product__btn__submit'
        = link_to 'もどる', root_path, class: "Product__btn__return"
  
  .End
